{% extends "base.twig" %}

{% block title %}{{title}}{% endblock %}

{% block content %}

    <div class="container mt-3">
        <h2>Edit product</h2>

        {{ form_start(form) }}

        {{ form_errors(form) }}

        <div class="form-group">

            <label for="name">Name:</label>

            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}

            <div class="invalid-feedback">{{ form_errors(form.name) }}</div>

        </div>

        <div class="form-group">

            <label for="image_url">Image URL:</label>

            {{ form_widget(form.imageUrl, {'attr': {'class': 'form-control'}}) }}

            <div class="invalid-feedback">{{ form_errors(form.imageUrl) }}</div>

        </div>

        <button type="submit" name="save" class="btn btn-dark">Save</button> <a href="/products" class="btn btn-primary">Cancel</a>

        {{ form_end(form) }}

    </div>

{% endblock %}
